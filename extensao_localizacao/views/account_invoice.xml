<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bradoo_invoice_form" model="ir.ui.view">
        <field name="name">bradoo.account.invoice.form</field>
            <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_invoice_open']" position="after">
                <button name="action_back_to_draft" type="object" string="Rascunho"
                         groups="account.group_account_invoice"
                        attrs="{'invisible':['|', ('edoc_state', '=', 'done'), ('state', '!=', 'open')]}"/>
            </xpath>
            <xpath expr="////field[@name='partner_id']" position="after">
                <field name="sequence_nf_number" invisible="1" readonly="1"/>
                <field name="sequence_nfse_number" invisible="1" readonly="1"/>
                <field name="edoc_state" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="attrs">{'readonly':['|',('sequence_nf_number', '!=', 0),
                    ('sequence_nfse_number', '!=', 0)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>